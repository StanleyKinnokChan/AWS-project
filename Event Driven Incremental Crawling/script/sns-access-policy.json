{
  "Version": "2012-10-17",
  "Id": "example-ID",
  "Statement": [
    {
      "Sid": "Example SNS topic policy",
      "Effect": "Allow",
      "Principal": {
        "Service": "s3.amazonaws.com"
      },
      "Action": "SNS:Publish",
      "Resource": "arn:aws:sns:us-east-1:459967084692:S3-Upload-Notification",
      "Condition": {
        "StringEquals": {
          "aws:SourceAccount": "459967084692"
        },
        "ArnLike": {
          "aws:SourceArn": "arn:aws:s3:::demo-fanout-noti-incremental-crawl"
        }
      }
    }
  ]
}